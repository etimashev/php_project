{
    "require": {
        "php": "^8.2",
        "eftec/bladeone": "^4.9"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "Controllers\\": "controllers/",
            "DB\\": "db/",
            "Utility\\": "utility/"
        }
    }
}
